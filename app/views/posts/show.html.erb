<p id="notice"><%= notice %></p>

	<div class="row posts-wrapper">
		<div class="post">
			<div class="post-head">
				<div class="name">
					<p><%= @post.user.user_name %></p>
				</div>
			</div>
			<div class="image center-block">
				<%= image_tag @post.image.url(:medium),class: 'img-responsive' %>
			</div>
			<p class= "caption">
		  		<%= @post.caption %>
		  	</p>
		  	<% if @post.user.id == current_user.id %>
		  		<%= link_to 'Back', posts_path, class: 'btn btn-link, center-block' %>
			  	<%= link_to 'Edit', edit_post_path(@post), class: 'btn btn-link' %>
			<% else %>
				<%= link_to 'Back', posts_path, class: 'btn btn-link, center-block' %>
			<% end %>
	  	</div>
	</div>
